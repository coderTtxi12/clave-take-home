# Application Configuration
APP_NAME="Data Analyst Agent"
APP_VERSION="1.0.0"
API_V1_PREFIX="/api/v1"
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Database Configuration
# Usado por: docker-compose.yml, scripts ETL, Alembic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=restaurant_analytics

# Database Connection Details (para scripts que se conectan al container)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=restaurant_analytics
DB_USER=postgres
DB_PASSWORD=postgres

# OpenAI API KEY
OPENAI_API_KEY=your_api_key


# Supabase

SUPABASE_DB_HOST=db.xxxxx.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=tu_password

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=production

# CORS Configuration (URL Vercel)
ALLOWED_ORIGINS=https://tu-app.vercel.app

# Redis (interno entre containers)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Code Executor (interno)
CODE_EXECUTOR_URL=http://code-executor:8001